@model IEnumerable<click_gas.Models.ServicosPedido>
@{
    Layout = "~/Views/Shared/LayoutCliente.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Cancelar Pedido</title>
</head>
<body class="w3-animate-top" background="..\..\imgs\fundo.jpg">
    @using (Html.BeginForm("Cancelar", "Cliente", FormMethod.Post))
    {
        <br>
        <br>
        <fieldset class="w3-container w3-card-4 w3-round-xlarge w3-white w3-margin-top" style="width:60%">
            <div class="w3-margin-top w3-center">
                <img style="width:20%" src="..\..\imgs\cancel.png" />
            </div>
            <h4 class="w3-center w3-text-deep-orange"><b>CANCELAMENTO DE PEDIDO</b></h4>
            <br>
            <p>Deseja prosseguir com o cancelamento do pedido que se realizaria a:</p>
            <br>
            <p id="Data"><b>Data: </b>@ViewBag.Data</p>
            <p id="Email"><b>Hora: </b>@ViewBag.Hora</p>

            <input type="hidden" name="idPedido" value=@ViewBag.Pedido />
            <br>
            <br>
            <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple w3-left w3-margin-left" style="width:30%" name="sub" type="submit" value="Continuar" />
            <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple w3-right w3-margin-right" style="width:30%" name="sub" type="submit" value="Cancelar" />
        </fieldset>
    }
</body>
</html>