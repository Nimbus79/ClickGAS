
@{
    Layout = "~/Views/Shared/LayoutCliente.cshtml";
}

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body class="w3-animate-top" background="..\..\imgs\fundo.jpg">
    <div class="w3-margin-top" style="width:50%">
        <fieldset class="w3-container w3-card-4 w3-round-xlarge w3-white">
            <div class="w3-margin-top w3-center">
                <img style="width:20%" src="..\..\imgs\perfil.png" />
            </div>
            <h4 class="w3-center w3-text-deep-orange"><b>PERFIL</b></h4>
            <br>
            <p id="Nome"><b>Nome: </b>@ViewBag.Nome</p>
            <p id="Email"><b>Email: </b>@ViewBag.Email</p>
            <p id="Contribuinte"><b>Contribuinte: </b>@ViewBag.Contribuinte</p>
            <p id="Contacto"><b>Contacto: </b>@ViewBag.Contacto</p>
            <p id="DataNasc"><b>Data de Nascimento: </b>@ViewBag.DataNasc</p>
            <p id="Morada"><b>Morada: </b>@ViewBag.Morada</p>
            <p id="Numero"><b>Nº: </b>@ViewBag.Numero</p>
            <p id="CodPostal"><b>Código Postal: </b>@ViewBag.CodPostal</p>
            <p id="Freguesia"><b>Freguesia: </b>@ViewBag.Freguesia</p>
            <p id="Concelho"><b>Concelho: </b>@ViewBag.Concelho</p>

            <div class="w3-center">
                <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple w3-center" type="button" value="Editar dados" onclick="location.href='@Url.Action("EditarPerfil", "Cliente")'" />
            </div>
        </fieldset>

    </div>
</body>
</html>
