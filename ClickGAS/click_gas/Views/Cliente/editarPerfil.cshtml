
@{
    Layout = "~/Views/Shared/LayoutCliente.cshtml";
}

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body class="w3-animate-top" background="..\..\imgs\fundo.jpg">
    <div class="w3-margin-top" style="width:50%">
        @using (Html.BeginForm("AtualizarDados", "Cliente", FormMethod.Post))
        {
        <fieldset class="w3-container w3-card-4 w3-round-xlarge w3-white">
            <div class="w3-margin-top w3-center">
                <img style="width:20%" src="..\..\imgs\perfil.png" />
            </div>
            <h4 class="w3-center w3-text-deep-orange"><b>EDITAR PERFIL</b></h4>
            <br>
            <p><b>Nome: </b><input type="text" name="nome" value="@ViewBag.Nome" required></p>
            <p id="Email"><b>Email: </b>@ViewBag.Email</p>
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <p id="Contribuinte"><b>Contribuinte: </b>@ViewBag.Contribuinte</p>
            <input type="hidden" name="contribuinte" value="@ViewBag.Contribuinte" />
            <p><b>Contacto: </b><input type="text" pattern="[0-9]{9}" name="contacto" value=@ViewBag.Contacto required></p>
            <p id="DataNasc"><b>Data de Nascimento: </b>@ViewBag.DataNasc</p>
            <input type="hidden" name="dataNasc" value="@ViewBag.DataNasc" />
            <p><b>Morada: </b><input type="text" name="morada" value="@ViewBag.Morada" required></p>
            <p><b>Nº: </b><input type="text" name="numero" pattern="[0-9]+" value="@ViewBag.Numero" required></p>
            <p><b>Código Postal: </b><input type="text" name="codPostal" value="@ViewBag.CodPostal" required></p>
            <p><b>Freguesia: </b><input type="text" name="freguesia" value="@ViewBag.Freguesia" required></p>
            <p><b>Concelho: </b><input type="text" name="concelho" value="@ViewBag.Concelho" required></p>

            <p class="w3-center">
                <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple w3-center" type="submit" value="Confirmar" />
            </p>
            <p class="w3-center">
                <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple w3-center" type="button" value="Cancelar" onclick="location.href='@Url.Action("VerPerfil", "Cliente")'" />
            </p>
        </fieldset>
        }
    </div>
</body>
</html>
