@{
    ViewBag.Title = "Página Inicial";
}

@{
    Layout = "~/Views/Shared/LayoutInicial.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body class="w3-animate-top" background="..\..\imgs\fundo.jpg">

    @if (!Request.IsAuthenticated)
    {
        <div class="w3-container w3-half w3-margin-top">

            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <fieldset class="w3-container w3-card-4 w3-round-xlarge w3-white">
                    <div class="w3-margin-top w3-center">
                        <img style="width:28%" class="w3-center" src="..\..\imgs\login.png" />
                    </div>
                    <h4 class="w3-center w3-text-deep-orange"><b>AUTENTICAÇÃO</b></h4>
                    <br>
                    <p>
                        <label>E-mail</label>
                        <input class="w3-input" type="text" name="email" required>
                    </p>
                    <p>
                        <label>Password</label>
                        <input class="w3-input" type="password" name="palavraPasse" required>
                    </p>
                    <p class="w3-center">
                        <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple" type="submit" value="Confirmar" />
                    </p>
                </fieldset>
            }

        </div>
    }
    else
    {
        <span>Hello</span> <strong>@Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink("Sign Out", "Logout", "Login");
    }

    <div class="w3-container w3-half w3-margin-top">
        @using (Html.BeginForm("AdicionarCliente", "Home", FormMethod.Post))
        {
            <fieldset class="w3-container w3-card-4 w3-round-xlarge w3-white">
                <div class="w3-margin-top w3-center">
                    <img style="width:30%" src="..\..\imgs\registo.png" />
                </div>
                <h4 class="w3-center w3-text-deep-orange"><b>REGISTO</b></h4>
                <br>
                <p>
                    <label>Nome</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="nome" required>
                </p>
                <p>
                    <label>E-mail</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="email" name="email" required>
                </p>
                <p>
                    <label>Password</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="password" name="palavraPasse" required>
                </p>
                <p>
                    <label>NIF</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="contribuinte" pattern="[0-9]{9}" required>
                </p>
                <p>
                    <label>Contacto</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="contacto" pattern="[0-9]{9}" required>
                </p>
                <p>
                    <label>Data de Nascimento</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="date" name="dataNasc" required>
                </p>
                <p>
                    <label>Rua</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="rua" required>
                </p>
                <p>
                    <label>Nº da Porta</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="numero" pattern="[0-9]+" required>
                </p>
                <p>
                    <label>Código Postal</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="codPostal" pattern="[0-9]{4}\-[0-9]{3}" required>
                </p>
                <p>
                    <label>Freguesia</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="freguesia" required>
                </p>
                <p>
                    <label>Concelho</label><font class="w3-text-deep-orange"> * </font>
                    <input class="w3-input" type="text" name="concelho" required>
                </p>
                <br>
                <font class="w3-text-deep-orange"> * </font> - <font class="w3-small">Campo de preenchimento obrigatório.</font>
                <br>
                <br>
                <p class="w3-center">
                    <input class="w3-button w3-section w3-deep-orange w3-round-xlarge w3-ripple w3-center" type="submit" value="Confirmar" />
                </p>
                
            </fieldset>
        }

    </div>
</body>
</html> 